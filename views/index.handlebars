  <a class="navbar-brand text-white">News Scraper</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active text-white">
        <a class="nav-link" href="/api/articles">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/saved">Saved Articles</a>
      </li>
      <li class="nav-item">
        <button class="btn btn-md btn-danger" id="scrape">Scrape New Articles</button>
      </li>
    </ul>
  </div>
</nav>
<section class="header">
  <div class="jumbotron">
    <div class="text-center text-white">
      <h2 class="header-text">See what's new from The Huffington Post! </h2>
      <p class="lead">Click the red button above to start scraping</p>
    </div>
  </div>
</section>
<section class="articles">
  {{#each articles}}

    <div class="card news-card">
      <a href="{{this.link}}">
        <img class="card-img-top" src="{{this.imageLink}}" alt="image">
      </a>
      <div class="card-body">
        <a href="{{this.link}}">
          <h5 class="card-title">{{this.title}}</h5>
        </a>
      </div>
      <div class="card-footer">
        <button class="btn btn-lg btn-info w-100" id="save" data-id="{{this._id}}">Save
          Article
        </button>
      </div>

    </div>

  {{/each}}
</section>

