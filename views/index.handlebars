<section class="header">
  <div class="jumbotron">
    <div class="text-center text-white">
      <h2 class="header-text">See what's new from The Huffington Post! </h2>
      <p class="lead">Click the red button above to start scraping</p>
    </div>
  </div>
</section>
<div class="divider bg-secondary"></div>
<section class="articles">
  {{#each articles}}
    <div class="card" style="width: 100%">
      <div class="card-header bg-primary">
        <a class="text-white" style="text-decoration: none;" href="{{this.link}}">
          <h4 class="card-title d-inline">{{this.title}}</h4>
        </a>
        <button class="btn btn-md btn-warning float-right" id="save" data-id="{{this._id}}">Save
          Article</button>
      </div>
      <div class="card-body"></div>
    </div>
  {{/each}}
</section>

