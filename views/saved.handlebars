<section class="header">
    <div class="jumbotron">
        <div class="text-center text-white">
            <h2 class="header-text">View your saved articles below! </h2>
        </div>
    </div>
</section>
<section class="articles">
    {{#each saved}}
        <div class="card news-card">
            <a href="{{this.link}}">
                <img class="card-img-top" src="{{this.imageLink}}" alt="image">
            </a>
            <div class="card-body">
                <a href="{{this.link}}">
                    <h5 class="card-title">{{this.title}}</h5>
                </a>
            </div>
            <div class="card-footer">
                <button class="btn btn-lg btn-info saved-button" id="add-note" data-id="{{this._id}}">Add Note</button>
                <button class="btn btn-lg btn-danger saved-button" id="delete" data-id="{{this._id}}">Delete</button>
            </div>
        </div>
    {{/each}}
</section>

