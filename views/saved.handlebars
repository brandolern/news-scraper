            <p class="lead">Read and add notes to your favorite articles!</p>
        </div>
    </div>
</section>
<div class="divider bg-secondary"></div>
<section class="articles">
    {{#each articles}}
        <div class="card" style="width: 100%">
            <div class="card-header bg-primary">
                <a class="text-white" style="text-decoration: none;" href="{{this.link}}">
                    <h4 class="card-title d-inline">{{this.title}}</h4>
                </a>
                <button class="btn btn-md btn-danger float-right">Delete Saved Article</button>
                <button class="btn btn-md btn-warning float-right" id="add-note" data-id="{{this._id}}">Add
                    Note</button>
            </div>
            <div class="card-body"></div>
        </div>
    {{/each}}
